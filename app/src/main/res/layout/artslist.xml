<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorDarkGrey"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/artview"
        android:layout_width="40dp"
        android:layout_height="40dp"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/artheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/artview"
        android:fontFamily="@font/graffiti"
        android:text="TextView"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/artdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/artheader"
        android:layout_below="@+id/artheader"
        android:text="TextView"
        android:textSize="8sp" />
</RelativeLayout>